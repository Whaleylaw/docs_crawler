# Crawl4AI Standalone Application Environment Configuration
# Copy this file to .env and customize the values for your deployment

# =============================================================================
# BASIC CONFIGURATION
# =============================================================================

# Application Environment (development, staging, production)
ENVIRONMENT=production

# Debug Mode (true/false)
DEBUG=false

# Application Version
VERSION=1.0.0

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# API Server Configuration
API_PORT=8000
API_SERVER_HOST=0.0.0.0
ENABLE_API=true

# Reverse Proxy Configuration
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration (Primary Database)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# PostgreSQL Configuration (Alternative to Supabase for local development)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=crawl4ai
POSTGRES_USER=crawl4ai
POSTGRES_PASSWORD=crawl4ai_password

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.3

# Alternative AI Providers (Optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key
# GOOGLE_API_KEY=your_google_api_key
# HUGGINGFACE_API_KEY=your_huggingface_api_key

# =============================================================================
# CRAWLING CONFIGURATION
# =============================================================================

# Performance Settings
MAX_CONCURRENT=10
MAX_DEPTH=3
CHUNK_SIZE=4000
CHUNK_OVERLAP=200

# Crawling Behavior
REQUEST_TIMEOUT=30
DELAY_BETWEEN_REQUESTS=1.0
RESPECT_ROBOTS_TXT=true
MAX_FILE_SIZE_MB=50

# User Agent
USER_AGENT="Crawl4AI-Standalone/1.0"

# =============================================================================
# RAG CONFIGURATION
# =============================================================================

# RAG Strategy Settings
ENABLE_CONTEXTUAL_EMBEDDINGS=false
EXTRACT_CODE_EXAMPLES=false
USE_RERANKING=false
USE_HYBRID_SEARCH=false

# Search Configuration
SIMILARITY_THRESHOLD=0.7
MAX_SEARCH_RESULTS=20
MIN_CODE_LENGTH=1000

# Processing Settings
RAG_PARALLEL_WORKERS=10
RAG_BATCH_SIZE=20

# =============================================================================
# CACHING AND PERFORMANCE
# =============================================================================

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# Performance Settings
ENABLE_CACHING=true
CACHE_TTL_MINUTES=60
MAX_MEMORY_MB=1024
ENABLE_COMPRESSION=true
ASYNC_PROCESSING=true

# Connection Pooling
CONNECTION_POOL_SIZE=10
QUERY_TIMEOUT=30

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Monitoring
ENABLE_MONITORING=true
ENABLE_METRICS=true

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
LOG_FILE_PATH=logs/app.log
MAX_LOG_SIZE_MB=100
LOG_RETENTION_DAYS=30
ENABLE_PERFORMANCE_LOGGING=false

# Error Tracking
ENABLE_ERROR_TRACKING=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Security Settings
ENCRYPT_CREDENTIALS=true
SESSION_TIMEOUT_MINUTES=480
ENABLE_CSRF_PROTECTION=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
ENABLE_AUDIT_LOGGING=true

# CORS Settings
ALLOWED_ORIGINS=*

# Password Policy
PASSWORD_MIN_LENGTH=8

# =============================================================================
# MONITORING SERVICES (OPTIONAL)
# =============================================================================

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Prometheus Configuration
PROMETHEUS_PORT=9090

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Docker Build Arguments
BUILD_DATE=
VCS_REF=

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Backup Configuration
ENABLE_BACKUPS=true
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# EXTERNAL INTEGRATIONS (OPTIONAL)
# =============================================================================

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=30
WEBHOOK_MAX_RETRIES=3

# Email Configuration (for alerts)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Slack Integration (for notifications)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#crawl4ai-alerts

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Feature Flags
FEATURE_API_V2=false
FEATURE_ADVANCED_RAG=false
FEATURE_CUSTOM_MODELS=false

# Resource Limits
MAX_CRAWL_JOBS_PER_USER=5
MAX_PROJECTS_PER_USER=10
MAX_DOCUMENTS_PER_PROJECT=10000

# Custom Configuration Path
CONFIG_FILE=config/config.json

# Temporary Directory
TEMP_DIR=/tmp/crawl4ai

# =============================================================================
# CLOUD PROVIDER SPECIFIC (OPTIONAL)
# =============================================================================

# AWS Configuration
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=

# Google Cloud Configuration
# GOOGLE_CLOUD_PROJECT=
# GOOGLE_APPLICATION_CREDENTIALS=

# Azure Configuration
# AZURE_STORAGE_ACCOUNT=
# AZURE_STORAGE_KEY=

# =============================================================================
# DEVELOPMENT SETTINGS (ONLY FOR DEVELOPMENT)
# =============================================================================

# Development Tools
ENABLE_DEBUG_TOOLBAR=false
ENABLE_PROFILING=false
ENABLE_HOT_RELOAD=false

# Testing Configuration
ENABLE_TEST_MODE=false
TEST_DATABASE_URL=

# Mock Services
USE_MOCK_OPENAI=false
USE_MOCK_SUPABASE=false